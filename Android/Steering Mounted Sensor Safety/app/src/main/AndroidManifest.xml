<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pk.ejunkies.android.activeDriverSafety">
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="pk.ejunkies.android.activeDriverSafety.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pk.ejunkies.android.activeDriverSafety.Add_Update_User"
            android:configChanges="orientation"
            android:label="@string/app_name" />
        <activity
            android:name="pk.ejunkies.android.activeDriverSafety.DataActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" />
        <activity
            android:name="pk.ejunkies.android.activeDriverSafety.SendSMSActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" />
    </application>
</manifest>