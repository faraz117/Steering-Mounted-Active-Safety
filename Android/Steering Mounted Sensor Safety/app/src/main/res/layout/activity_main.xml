<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pk.ejunkies.android.activeDriverSafety.MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="154dp"
            android:layout_height="110dp"
            app:srcCompat="@mipmap/alcohol" />

        <TextView
            android:id="@+id/textViewAlcohol"
            android:layout_width="154dp"
            android:layout_height="110dp"
            android:textAlignment="center"
            android:textSize="50dp"
            android:text="0.00" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="154dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_row="1"
            app:srcCompat="@mipmap/pulse" />

        <TextView
            android:id="@+id/textViewPulse"
            android:layout_width="154dp"
            android:layout_height="110dp"
            android:textAlignment="center"
            android:textSize="50dp"
            android:text="0.00"  />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="154dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_row="2"
            app:srcCompat="@mipmap/temperature" />

        <TextView
            android:id="@+id/textViewTemperature"
            android:layout_width="154dp"
            android:layout_height="110dp"
            android:textAlignment="center"
            android:textSize="50dp"
            android:text="0.00"  />
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="154dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_row="3"
            app:srcCompat="@mipmap/obstacle">
        </ImageView>

        <TextView
            android:id="@+id/textViewObstacle"
            android:layout_width="154dp"
            android:layout_height="110dp"
            android:textAlignment="center"
            android:textSize="50dp"
            android:text="0.00"  />

        <Button
            android:id="@+id/add_sender_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Add Emergency Contact" />

        <Button
            android:id="@+id/send_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:text="Emergency SMS" />

    </GridLayout>

</LinearLayout>